{% from "macro.html.twig" import nav_links %}

<!DOCTYPE html>
<html lang="sr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=2.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{% block title %}Mreža Solidarnosti - IT Srbija{% endblock %}</title>

        <meta name="title" content="{{ block('title') }}">
        <meta name="description" content="Mreža solidarnosti je inicijativa IT Srbije za direktnu finansijsku podršku nastavnicima i vannastavnom osoblju čija je plata umanjena zbog obustave rada. Pridruži se, doniraj i podrži one koji se bore za bolje obrazovanje!">
        <meta name="keywords" content="Mreža solidarnosti, IT Srbija, prosveta, donacije, podrška nastavnicima, solidarnost, pomoć nastavnicima, obustava rada, direktna podrška">

        <meta property="og:type" content="website">
        <meta property="og:url" content="https://mrezasolidarnosti.org/">
        <meta property="og:title" content="{{ block('title') }}">
        <meta property="og:description" content="Direktna podrška nastavnicima čija je plata umanjena zbog obustave rada. Uključi se, doniraj, podrži solidarnost u prosveti!">
        <meta property="og:image" content="{{ absolute_url(asset('image/social.webp')) }}">

        <meta property="twitter:card" content="summary_large_image">
        <meta property="twitter:url" content="https://mrezasolidarnosti.org/">
        <meta property="twitter:title" content="{{ block('title') }}">
        <meta property="twitter:description" content="Direktna finansijska pomoć nastavnicima u obustavi rada. Pridruži se IT Srbiji u inicijativi solidarnosti!">
        <meta property="twitter:image" content="{{ absolute_url(asset('image/social.webp')) }}">

        <link type="text/plain" rel="author" href="{{ asset('humans.txt') }}" />
        <link rel="canonical" href="{{ app.request.uri }}">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tabler-icons/3.28.1/tabler-icons.min.css" integrity="sha512-UuL1Le1IzormILxFr3ki91VGuPYjsKQkRFUvSrEuwdVCvYt6a1X73cJ8sWb/1E726+rfDRexUn528XRdqrSAOw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link href="https://cdn.jsdelivr.net/npm/daisyui@5.0.12" rel="stylesheet" type="text/css" />
        <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4.1.2"></script>
        <link href="https://cdn.jsdelivr.net/npm/daisyui@5/themes.css" rel="stylesheet" type="text/css" />

        {% if umami_tracking is defined %}
            <script defer src="https://cloud.umami.is/script.js" data-website-id="{{ umami_tracking }}"></script>
        {% endif %}

        <link href="{{ asset('stylesheet/general.css') }}" rel="stylesheet" type="text/css" />
        {% block stylesheets %}{% endblock %}
    </head>
    <body data-theme="corporate">
        {% block navbar %}
            <div class="navbar bg-base-100 shadow-sm px-10 py-5">
                <div class="flex-1 align-middle flex items-center gap-2">
                    <a href="{{ path('home') }}">
                        <img src="{{ asset('image/logo.svg') }}" alt="Logo" class="w-12 h-12 rounded-lg bg-base-100">
                    </a>
                    <a href="{{ path('home') }}" class="ml-2 flex items-center gap-1 text-lg font-medium text-black hover:text-primary transition-colors">
                        <span class="ti ti-home text-xl"></span>
                        Početna
                    </a>
                </div>

                <!-- Regular menu items (visible on large screens) -->
                <div class="navbar-center hidden lg:flex">
                    <ul class="menu menu-horizontal px-1 gap-3 size-xl">
                        {{ nav_links('link link-primary no-underline') }}
                    </ul>
                </div>

                <!-- Burger menu for small screens -->
                <div class="flex-none lg:hidden">
                    <details class="dropdown dropdown-end">
                        <summary class="btn btn-ghost btn-circle" aria-label="Open menu">
                            <span class="ti ti-menu-2 text-xl"></span>
                        </summary>
                        <ul class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-72">
                            {{ nav_links('link-primary') }}
                        </ul>
                    </details>
                </div>
            </div>
        {% endblock %}

        {% block body %}{% endblock %}

        {% block footer %}
            <div class="mt-10 pb-10">
                <a href="https://itsrbija.org">
                    <img src="{{ asset('image/logo.svg') }}" alt="IT Srbija logo" class="mx-auto w-12 h-12 rounded-lg bg-base-100">
                </a>
            </div>
        {% endblock %}

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="{{ asset('javascript/general.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
