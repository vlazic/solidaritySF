{% from "macro.html.twig" import nav_links %}

<!DOCTYPE html>
<html lang="sr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=2.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{% block title %}Mreža solidarnosti - IT Srbija{% endblock %}</title>

        <meta name="title" content="{{ block('title') }}">
        <meta name="description" content="Mreža solidarnosti je inicijativa IT Srbije za direktnu finansijsku podršku nastavnicima i vannastavnom osoblju čija je plata umanjena zbog obustave rada. Pridruži se, doniraj i podrži one koji se bore za bolje obrazovanje!">
        <meta name="keywords" content="Mreža solidarnosti, IT Srbija, prosveta, donacije, podrška nastavnicima, solidarnost, pomoć nastavnicima, obustava rada, direktna podrška">

        <link rel="icon" type="image/png" href="{{ asset('favicon-96x96.png') }}" sizes="96x96" />
        <link rel="icon" type="image/svg+xml" href="{{ asset('favicon.svg') }}" />
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}" />
        <meta name="apple-mobile-web-app-title" content="{{ block('title') }}" />
        <link rel="manifest" href="{{ asset('site.webmanifest') }}">

        <meta property="og:type" content="website">
        <meta property="og:url" content="{{ WEBSITE_URL }}">
        <meta property="og:title" content="{{ block('title') }}">
        <meta property="og:description" content="Direktna podrška nastavnicima čija je plata umanjena zbog obustave rada. Uključi se, doniraj, podrži solidarnost u prosveti!">
        <meta property="og:image" content="{{ absolute_url(asset('image/social2.webp')) }}">

        <meta property="twitter:card" content="summary_large_image">
        <meta property="twitter:url" content="{{ WEBSITE_URL }}">
        <meta property="twitter:title" content="{{ block('title') }}">
        <meta property="twitter:description" content="Direktna finansijska pomoć nastavnicima u obustavi rada. Pridruži se IT Srbiji u inicijativi solidarnosti!">
        <meta property="twitter:image" content="{{ absolute_url(asset('image/social2.webp')) }}">

        <link type="text/plain" rel="author" href="{{ asset('humans.txt') }}" />
        <link rel="canonical" href="{{ app.request.uri }}">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

        <link href="{{ asset('stylesheet/tabler-icons/tabler-icons.min.css') }}" rel="stylesheet" type="text/css"/>
        <link href="https://cdn.jsdelivr.net/npm/daisyui@5.0.12" rel="stylesheet" type="text/css" />
        <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4.1.2"></script>
        <link href="https://cdn.jsdelivr.net/npm/daisyui@5/themes.css" rel="stylesheet" type="text/css" />

        <script src="https://cdn.jsdelivr.net/npm/driver.js@latest/dist/driver.js.iife.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/driver.js@latest/dist/driver.css"/>

        {% if UMAMI_TRACKING_SCRIPT is not empty and UMAMI_TRACKING_ID is not empty %}
            <script defer src="{{ UMAMI_TRACKING_SCRIPT }}" data-website-id="{{ UMAMI_TRACKING_ID }}"></script>
        {% endif %}

        <link href="{{ asset('stylesheet/general.css') }}" rel="stylesheet" type="text/css" />
        {% block stylesheets %}{% endblock %}
    </head>
    <body data-theme="corporate" class="min-h-screen flex flex-col">
        <div class="flex-grow">
            {% block navbar %}
                <div class="navbar bg-primary text-primary-content shadow-sm px-10 py-5">
                    <div class="flex-1 align-middle">
                        <a href="{{ path('home') }}">
                            <img src="{{ asset('image/logo-msp-white.svg') }}" alt="Logo" class="w-42 rounded-lg bg-primary">
                        </a>
                    </div>

                    <!-- Regular menu items (visible on large screens) -->
                    <div class="navbar-center hidden lg:flex">
                        <ul class="menu menu-horizontal px-1 gap-3 size-xl text-primary-content">
                            {{ nav_links('link text-primary-content hover:bg-white hover:text-primary transition-colors no-underline') }}
                        </ul>
                    </div>

                    <!-- Burger menu for small screens -->
                    <div class="flex-none lg:hidden">
                        <details class="dropdown dropdown-end">
                            <summary class="btn btn-ghost btn-circle text-primary-content hover:bg-white hover:text-primary transition-colors" aria-label="Open menu">
                                <span class="ti ti-menu-2 text-xl"></span>
                            </summary>
                            <ul class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-72">
                                {{ nav_links('link-primary') }}
                            </ul>
                        </details>
                    </div>
                </div>
            {% endblock %}

            {% block body %}{% endblock %}
        </div>

        {% block footer %}
            <footer class="footer sm:footer-horizontal bg-base-100 text-base-content p-10 mt-10">
                <aside>
                    <a href="{{ path('home') }}">
                        <img src="{{ asset('image/logo.svg') }}" alt="Logo" class="w-42 rounded-lg">
                    </a>

                    <div>
                        <p>Mreža solidarnosti</p>
                        <p>
                            <a href="https://itsrbija.org" target="_blank" class="link link-hover text-primary">IT Srbija</a>
                        </p>
                    </div>
                </aside>
                <nav>
                    <h6 class="footer-title">Linkovi</h6>
                    <a href="{{ path('static_contact') }}" class="link link-hover text-primary">Kontakt</a>
                    <a href="{{ path('static_schools') }}" class="link link-hover text-primary">Umreženo po školama</a>
                </nav>
                <nav>
                    <h6 class="footer-title">Socijalne mreže</h6>
                    <div class="grid grid-cols-6 md:grid-cols-3 gap-4">
                        <a href="https://www.linkedin.com/company/it-srbija/" target="_blank" title="LinkedIn" class="text-gray-500 transition duration-200 hover:scale-110">
                            <i class="ti ti-brand-linkedin text-3xl"></i>
                        </a>

                        <a href="https://www.instagram.com/it.srbija" target="_blank" title="Instagram" class="text-gray-500 transition duration-200 hover:scale-110">
                            <i class="ti ti-brand-instagram text-3xl"></i>
                        </a>

                        <a href="https://www.facebook.com/share/1BXSBJy2cY/" target="_blank" title="Facebook" class="text-gray-500 transition duration-200 hover:scale-110">
                            <i class="ti ti-brand-facebook text-3xl"></i>
                        </a>

                        <a href="https://x.com/ITSrbijaOrg" target="_blank" title="X" class="text-gray-500 transition duration-200 hover:scale-110">
                            <i class="ti ti-brand-x text-3xl"></i>
                        </a>

                        <a href="https://tiktok.com/@it.srbija" target="_blank" title="TikTok" class="text-gray-500 transition duration-200 hover:scale-110">
                            <i class="ti ti-brand-tiktok text-3xl"></i>
                        </a>

                        <a href="https://github.com/IT-Srbija-Org" target="_blank" title="TikTok" class="text-gray-500 transition duration-200 hover:scale-110">
                            <i class="ti ti-brand-github text-3xl"></i>
                        </a>
                    </div>
                </nav>
            </footer>
        {% endblock %}

        <script src="{{ asset('javascript/jquery.min.js') }}"></script>
        <script src="{{ asset('javascript/general.js') }}"></script>
        <script>
            loadDriverInfo();
        </script>

        {% block javascripts %}{% endblock %}
    </body>
</html>
